<idea-plugin>
    <id>com.github.danieldeng2.waccplugin</id>
    <name>WACC</name>
    <vendor>danieldeng2</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.danieldeng2.waccplugin.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.danieldeng2.waccplugin.services.MyProjectService"/>

        <fileType name="WACC File" implementationClass="com.github.danieldeng2.waccplugin.language.WaccFileType"
                  language="WACC" extensions="wacc"/>

        <lang.parserDefinition language="WACC"
                               implementationClass="com.github.danieldeng2.waccplugin.language.WaccParserDefinition"/>

        <lang.syntaxHighlighterFactory language="WACC"
                                       implementationClass="com.github.danieldeng2.waccplugin.language.WaccSyntaxHighlighterFactory"/>


        <lang.braceMatcher language="WACC"
                           implementationClass="com.github.danieldeng2.waccplugin.language.WaccBraceMatcher"/>


        <externalAnnotator language="WACC"
                           implementationClass="com.github.danieldeng2.waccplugin.language.WaccExternalAnnotator"/>

        <completion.contributor language="WACC"
                                implementationClass="com.github.danieldeng2.waccplugin.language.WaccCompletionContributor"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.danieldeng2.waccplugin.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>

</idea-plugin>
